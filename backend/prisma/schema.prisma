model Supply {
  id_supply         Int                 @id @default(autoincrement())
  description       String              @unique
  price             Float               @default(1.00)
  category          SupplyCategory
  unit              Unit
  value             Int
  deleted           Boolean             @default(false)
  created           DateTime            @default(now())
