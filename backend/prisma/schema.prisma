enum Role {
  admin
  employee
}

model User{
  id_user Int @id @default(autoincrement())
  username String @unique
  name String
  firstName String
  secondName String
  email String @unique
  phone String
  pass String
  role Role @default(employee)
  refreshTokens RefreshToken[]
  orders Order[]
}

model Client{
  id_client Int @id @default(autoincrement())
  username String @unique
  name String
  firstName String
  secondName String
  email String @unique
  phone String
  pass String?
  orders Order[]
}

model RefreshToken {
  id_token    Int   @id @default(autoincrement())
  hashedToken String
  fk_user     Int
  user        User     @relation(fields: [fk_user], references: [id_user], onDelete: Cascade)
  revoked     Boolean  @default(false)
  createdAt   DateTime @default(now())
}

enum MachineType {
  lavadora
  secadora
}

enum Status {
  available
  unavailable
}

model Machine{
  id_machine Int @id @default(autoincrement())
  machineType MachineType @default(lavadora)
  model String
  cicleTime Int
  weight Int
  status Status @default(available)
  notes String
}

model Service{
  id_service Int @id @default(autoincrement())
  description String
  // Precio Unitario
  price Float
  time Int
  weight Int
  orders Order[]
}

enum PayMethod {
  tarjeta
  efectivo
}

enum PayStatus {
  paid
  unpaid
}

enum OrderStatus {
  pendiente
  finalizado
}

model Order{
  id_order Int @id @default(autoincrement())
  units Int @default(1)
  receptionDate DateTime @default(now())
  deliveryDate DateTime @default(now())
  payMethod PayMethod @default(efectivo)
  payStatus PayStatus @default(unpaid)
  orderStatus OrderStatus @default(pendiente)
  totalPrice Float
  fk_client Int
  fk_employee Int
  fk_service Int
  client Client @relation(fields: [fk_client], references: [id_client])
  employee User @relation(fields: [fk_employee], references: [id_user])
  service Service @relation(fields: [fk_service], references: [id_service])
}